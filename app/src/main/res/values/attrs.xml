<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- API specific theme attributes 14+ -->
    <declare-styleable name="AppThemeAttributes">
        <attr name="selectableCircleDrawable" format="reference" />
        <attr name="selectableCircleDrawableColored" format="reference" />
        <attr name="selectableCircleDrawableInverse" format="reference" />
        <attr name="selectableRectDrawable" format="reference" />
        <attr name="selectableRectDrawableColored" format="reference" />
        <attr name="selectableRectDrawableInverse" format="reference" />
        <attr name="selectableRoundedRectDrawable" format="reference" />
        <attr name="selectableRoundedRectDrawableColored" format="reference" />
        <attr name="selectableRoundedRectDrawableInverse" format="reference" />
        <attr name="selectableRoundedRectDrawableInverseLargeRadius" format="reference" />
    </declare-styleable>

    <declare-styleable name="FixedAspectRatioImageView">
        <attr name="widthToHeightRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="FixedAspectRatioRoundedImageView">
        <attr name="roundedImageView_widthToHeightRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="FontEditText">
        <attr name="editText_font" format="string" />
    </declare-styleable>

    <declare-styleable name="FontTextView">
        <attr name="textView_font" format="string" />
    </declare-styleable>

    <declare-styleable name="SlyceMessagingTheme">
        <attr name="backgroundColor" format="color" />
        <attr name="timestampTextColor" format="color" />
        <attr name="localBubbleBackground" format="color" />
        <attr name="localBubbleTextColor" format="color" />
        <attr name="externalBubbleBackground" format="color" />
        <attr name="externalBubbleTextColor" format="color" />
        <attr name="snackbarBackground" format="color" />
        <attr name="snackbarTitleColor" format="color" />
        <attr name="snackbarButtonColor" format="color" />
    </declare-styleable>
    <declare-styleable name="CameraView">
        <!--
          Set this to true if you want the CameraView to adjust its bounds to preserve the aspect
          ratio of its camera preview.
        -->
        <attr name="android:adjustViewBounds" />
        <!-- Direction the camera faces relative to device screen. -->
        <attr name="facing" format="enum">
            <!-- The camera device faces the opposite direction as the device's screen. -->
            <enum name="back" value="0" />
            <!-- The camera device faces the same direction as the device's screen. -->
            <enum name="front" value="1" />
        </attr>
        <!-- Aspect ratio of camera preview and pictures. -->
        <attr name="aspectRatio" format="string" />
        <!-- Continuous auto focus mode. -->
        <attr name="autoFocus" format="boolean" />
        <!-- The flash mode. -->
        <attr name="flash" format="enum">
            <!-- Flash will not be fired. -->
            <enum name="off" value="0" />
            <!--
              Flash will always be fired during snapshot.
              The flash may also be fired during preview or auto-focus depending on the driver.
            -->
            <enum name="on" value="1" />
            <!--
              Constant emission of light during preview, auto-focus and snapshot.
              This can also be used for video recording.
            -->
            <enum name="torch" value="2" />
            <!--
              Flash will be fired automatically when required.
              The flash may be fired during preview, auto-focus, or snapshot depending on the
              driver.
            -->
            <enum name="auto" value="3" />
            <!--
              Flash will be fired in red-eye reduction mode.
            -->
            <enum name="redEye" value="4" />
        </attr>
    </declare-styleable>
</resources>