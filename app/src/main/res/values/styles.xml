<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar"></style>

    <style name="DashboardText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">.8</item>
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textColorLink">@android:color/holo_blue_dark</item>
    </style>

    <!-- Base Theme -->
    <style name="BaseTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App specific attributes all APIs -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlHighlight">@color/selector_black_pressed</item>
    </style>

    <!-- App Theme -->
    <style name="AppTheme.Light" parent="BaseTheme.Light">

    </style>

    <style name="MyTheme">
        <item name="backgroundColor">@color/background_white</item>
        <item name="timestampTextColor">@color/background_white</item>
        <item name="localBubbleBackground">@color/background_white</item>
        <item name="localBubbleTextColor">@color/text_black</item>
        <item name="externalBubbleBackground">@color/background_white</item>
        <item name="externalBubbleTextColor">@color/text_black</item>
        <item name="snackbarBackground">@color/background_gray_darkest</item>
        <item name="snackbarTitleColor">@color/text_black</item>
        <item name="snackbarButtonColor">@color/text_blue_lightest</item>
    </style>

    <style name="Widget.CameraView" parent="android:Widget">
        <item name="android:adjustViewBounds">false</item>
        <item name="facing">back</item>
        <item name="aspectRatio">4:3</item>
        <item name="autoFocus">true</item>
        <item name="flash">auto</item>
    </style>

</resources>
